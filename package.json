{
  "name": "@1shotapi/1shotpay-sdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "1ShotPay SDK monorepo â€” client, server, and shared packages",
  "workspaces": [
    "src/common",
    "src/client",
    "src/server",
    "src/examples/server"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -At run build",
    "build:common": "yarn workspace @1shotapi/1shotpay-common run build",
    "build:client": "yarn workspace @1shotapi/1shotpay-client-sdk run build",
    "build:server": "yarn workspace @1shotapi/1shotpay-server-sdk run build",
    "build:test": "vite build",
    "build:test:gh-pages": "vite build",
    "dev": "vite",
    "server-example": "yarn workspace 1shotpay-server-example start",
    "compile": "yarn workspaces foreach -At run typecheck",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "rimraf dist docs src/common/dist src/client/dist src/server/dist",
    "publish:common": "yarn run build:common && yarn workspace @1shotapi/1shotpay-common npm publish --access public --tolerate-republish",
    "publish:client": "yarn run build && yarn workspace @1shotapi/1shotpay-client-sdk npm publish --access public --tolerate-republish",
    "publish:server": "yarn run build && yarn workspace @1shotapi/1shotpay-server-sdk npm publish --access public --tolerate-republish"
  },
  "author": "1Shot API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1shotapi/1shotpay-sdk.git"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.15.0",
    "@swc/core": "^1.8.0",
    "@types/node": "^25.0.8",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.4.49",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.15.0",
    "unplugin-swc": "^1.5.9",
    "vite": "^5.1.0"
  }
}
