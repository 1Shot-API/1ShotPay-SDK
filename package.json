{
  "name": "@1shotapi/1shotpay-sdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "1ShotPay SDK monorepo â€” client, server, and shared packages",
  "workspaces": [
    "src/common",
    "src/client",
    "src/server"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -At run build",
    "build:common": "yarn workspace @1shotapi/1shotpay-common run build",
    "build:client": "yarn workspace @1shotapi/1shotpay-client-sdk run build",
    "build:server": "yarn workspace @1shotapi/1shotpay-server-sdk run build",
    "build:test": "vite build",
    "build:test:gh-pages": "vite build",
    "dev": "vite",
    "typecheck": "yarn workspaces foreach -At run typecheck",
    "lint": "eslint \"src/**/*.ts\" --ext .ts",
    "lint:fix": "eslint \"src/**/*.ts\" --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "rimraf dist docs src/common/dist src/client/dist src/server/dist",
    "publish:common": "yarn run build:common && yarn npm publish -w @1shotapi/1shotpay-common",
    "publish:client": "yarn run build && yarn npm publish -w @1shotapi/1shotpay-client-sdk",
    "publish:server": "yarn run build && yarn npm publish -w @1shotapi/1shotpay-server-sdk"
  },
  "author": "1Shot API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1shotapi/1shotpay-sdk.git"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  }
}
